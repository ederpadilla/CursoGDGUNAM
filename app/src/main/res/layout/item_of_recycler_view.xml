<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="10dp"
    android:background="@drawable/my_item_bg"
    android:elevation="2dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="100dp">

        <ImageView
            android:id="@+id/img_model"
            android:layout_width="75dp"
            android:layout_height="75dp"
            android:layout_alignParentStart="true"
            android:layout_centerInParent="true"
            android:layout_marginStart="10dp"
            android:src="@drawable/dragon_ball_turtle"
            android:contentDescription="@string/model_image"/>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_marginStart="100dp"
            android:layout_centerVertical="true"
            android:layout_marginEnd="45dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_model_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                style="TextsOfItem" />

            <TextView
                android:id="@+id/tv_model_type"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                style="TextsOfItem"/>

            <TextView
                android:id="@+id/tv_model_max_power"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                style="TextsOfItem" />

            <TextView
                android:id="@+id/tv_model_min_power"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                style="TextsOfItem"/>

        </LinearLayout>
        <ImageView
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_alignParentEnd="true"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="10dp"
            android:layout_marginEnd="15dp"
            android:src="@drawable/dragon_ball_turtle"/>
    </RelativeLayout>

</LinearLayout>